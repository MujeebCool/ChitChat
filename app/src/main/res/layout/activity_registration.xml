<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/etphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etusername"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="phone number"
        android:inputType="phone"
        android:textAlignment="center"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/etpass_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etphone"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/etconpass_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etpass_reg"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="confirm password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnregis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etconpass_reg"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:text="register"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnregis"
        android:ems="10"
        android:onClick="user_login"
        android:text="already a user?  login"
        android:textAlignment="center"
        android:textColor="#061af9"
        android:textSize="25sp" />
</RelativeLayout>